<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogActivity"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/signallog"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="170sp"
        android:layout_height="100sp"
        style="@style/button"
        android:id="@+id/heartrate"
        android:text="心率\n\n76次/分钟"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toBottomOf="@id/signallog"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="170sp"
        android:layout_height="100sp"
        style="@style/button"
        android:id="@+id/steps"
        android:text="步数\n\n659步"
        android:textSize="25sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/signallog"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="170sp"
        android:layout_height="100sp"
        style="@style/button"
        android:id="@+id/energy"
        android:text="消耗能量\n\n33.2千卡"
        android:textSize="25sp"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toBottomOf="@id/heartrate"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="170sp"
        android:layout_height="100sp"
        style="@style/button"
        android:id="@+id/level"
        android:text="心情等级\n\n1"
        android:textSize="25sp"
        android:layout_marginEnd="10sp"
        app:layout_constraintTop_toBottomOf="@id/steps"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/level"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20sp"
        android:textSize="15sp"
        android:textColor="@color/colorText"
        android:gravity="start|center"
        android:id="@+id/anareslog"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>