<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        style="@style/button"
        android:layout_marginTop="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="新用户注册"
        android:background="@color/colorBackground"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/signup_label" />

    <TextView
        android:id="@+id/username_signup_text"
        android:layout_width="100sp"
        android:layout_height="50sp"
        style="@style/button"
        android:text="用户名："
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_label" />
    <TextView
        android:id="@+id/password_signup_text"
        android:layout_width="100sp"
        android:layout_height="50sp"
        style="@style/button"
        android:text="密码："
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_signup_text" />
    <TextView
        android:id="@+id/password_signup_text2"
        android:layout_width="100sp"
        android:layout_height="50sp"
        style="@style/button"
        android:text="确认密码："
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_signup_text" />
    <TextView
        android:id="@+id/nickname_signup_text"
        android:layout_width="100sp"
        android:layout_height="50sp"
        style="@style/button"
        android:text="昵称："
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_signup_text2" />

    <EditText
        android:layout_width="350sp"
        android:layout_height="50sp"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_label"
        app:layout_constraintStart_toEndOf="@+id/username_signup_text"
        android:gravity="center"
        android:id="@+id/username_signup"
        />
    <EditText
        android:layout_width="350sp"
        android:layout_height="50sp"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_signup"
        app:layout_constraintStart_toEndOf="@+id/password_signup_text"
        android:gravity="center"
        android:id="@+id/password_signup"
        />
    <EditText
        android:layout_width="350sp"
        android:layout_height="50sp"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_signup"
        app:layout_constraintStart_toEndOf="@+id/password_signup_text2"
        android:gravity="center"
        android:id="@+id/password_signup2"
        />
    <EditText
        android:layout_width="350sp"
        android:layout_height="50sp"
        style="@style/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_signup2"
        app:layout_constraintStart_toEndOf="@+id/nickname_signup_text"
        android:gravity="center"
        android:id="@+id/nickname_signup"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50sp"
        style="@style/button"
        android:layout_marginBottom="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="注册"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/signup"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50sp"
        style="@style/button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="注册成功!"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/signup_notification"
        android:visibility="invisible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>